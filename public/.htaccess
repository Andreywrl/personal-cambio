# FORÇAR HTTPS
RewriteEngine On
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# REDIRECIONAMENTO de www para sem www
RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
RewriteRule ^ https://%1%{REQUEST_URI} [R=301,L]

# EVITAR LISTAGEM DE DIRETÓRIOS
Options -Indexes

# BLOQUEAR HOTLINK DE IMAGENS
RewriteCond %{HTTP_REFERER} !^$
RewriteCond %{HTTP_REFERER} !^https://(www\.)?personalcambio\.com\.br/ [NC]
RewriteRule \.(jpg|jpeg|png|gif|webp)$ - [F,NC,L]

# HABILITAR COMPACTAÇÃO GZIP PARA TEXTOS
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain
  AddOutputFilterByType DEFLATE text/html
  AddOutputFilterByType DEFLATE text/xml
  AddOutputFilterByType DEFLATE text/css
  AddOutputFilterByType DEFLATE application/xml
  AddOutputFilterByType DEFLATE application/xhtml+xml
  AddOutputFilterByType DEFLATE application/rss+xml
  AddOutputFilterByType DEFLATE application/javascript
  AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# CACHE DE 90 DIAS PARA ARQUIVOS ESTÁTICOS
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresDefault "access plus 90 days"

  ExpiresByType image/jpg "access plus 90 days"
  ExpiresByType image/jpeg "access plus 90 days"
  ExpiresByType image/gif "access plus 90 days"
  ExpiresByType image/png "access plus 90 days"
  ExpiresByType image/webp "access plus 90 days"
  ExpiresByType text/css "access plus 90 days"
  ExpiresByType application/javascript "access plus 90 days"
  ExpiresByType application/x-javascript "access plus 90 days"
  ExpiresByType text/javascript "access plus 90 days"
  ExpiresByType video/mp4 "access plus 90 days"
</IfModule>

# CACHE-CONTROL COM 90 DIAS
<IfModule mod_headers.c>
  <FilesMatch "\.(jpg|jpeg|png|gif|webp|css|js|mp4)$">
    Header set Cache-Control "max-age=7776000, public"
  </FilesMatch>
</IfModule>

# SEGURANÇA ADICIONAL
<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
  Header set X-XSS-Protection "1; mode=block"
  Header set X-Frame-Options "SAMEORIGIN"
</IfModule>
